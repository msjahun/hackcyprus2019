
@{
    ViewData["Title"] = "index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<!-- Header (v2) -->
<section class="slice slice-lg bg-gradient-primary" data-offset-top="#header-main">
    <!-- SVG background -->
    <div class="bg-absolute-cover bg-size--contain d-flex align-items-center">
        <figure class="w-100">
            <img alt="Image placeholder" src="@Url.Content("~/assets/")/img/svg/backgrounds/light-texture.svg" class="svg-inject">
        </figure>
    </div>
    <div class="py-6 py-xl-9">
        <div class="container position-relative zindex-100">
            <div class="col px-0">
                <div class="row">
                    <div class="col-lg-6">
                        <h2 class="h1 text-white">
                            Hack cyprus 2019 Parking alert project
                        </h2>
                        <p class="lead text-white mt-4">
                            Parking just became much more convenient with our packing alert app, all you have to do is scan the QR Code.
                        </p>
                        <a href="#howitworks" class="btn btn-white rounded-pill mt-4">
                            See how it works
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- Features (v8) -->
<section class="slice slice-lg" id="sct-what-we-do">
    <div class="container">
        <div class="row row-grid">
            <div class="col-lg-4">
                <div class="">
                    <div class="pb-5">
                        <div class="icon bg-gradient-primary text-white rounded-circle icon-lg icon-shape shadow">
                            <i class="fas fa-palette"></i>
                        </div>
                    </div>
                    <h5 class="font-weight-bold">QR Code Scan</h5>
                    <p class="mt-2 mb-0">
                        Open a QR Code scanner, scan the QR code on the car you need to send an alert to it's owner.'
                    </p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="">
                    <div class="pb-5">
                        <div class="icon bg-gradient-warning text-white rounded-circle icon-lg icon-shape shadow">
                            <i class="fas fa-code"></i>
                        </div>
                    </div>
                    <h5 class="font-weight-bold">Select a Custom Message</h5>
                    <p class="mt-2 mb-0">
                        From the web page or app installed in your phone you can select a custom message that is directly delivered to the user.
                    </p>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="">
                    <div class="pb-5">
                        <div class="icon bg-gradient-danger text-white rounded-circle icon-lg icon-shape shadow">
                            <i class="fas fa-cogs"></i>
                        </div>
                    </div>
                    <h5 class="font-weight-bold">Recieve Replies</h5>
                    <p class="mt-2 mb-0">
                        After message is recieved, user will send a customized reply notifying you of their response.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>


<!-- Video (v1) -->
<section class="slice-video slice-xl d-flex align-items-center bg-cover bg-size--cover" id="howitworks" style="background-image: url(@Url.Content("~/assets/")img/backgrounds/img-bg-1.jpg); background-size:contain; background-repeat:repeat;">
    <span class="mask bg-gradient-dark opacity-7"></span>
    <div class="container">
        <div class="col">
            <div class="row justify-content-center">
                <div class="col-md-10 text-center">
                    <h2 class="display-4 text-white">
                        How does our app work?
                    </h2>
                    <h4 class="text-white mt-3">Watch this video to see a presentation of how it work!</h4>
                    <a href="https://www.youtube.com/watch?v=azep6YQy2Io" data-fancybox data-toggle="tooltip" data-placement="bottom" title="Watch video in lightbox" class="btn btn-white btn-icon-only rounded-circle hover-scale-110 mt-4">
                        <span class="btn-inner--icon">
                            <i class="fas fa-play"></i>
                        </span>
                    </a>
                </div>
            </div>
        </div>
    </div>
</section>
